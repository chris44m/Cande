@model IEnumerable<CandelariaP.Models.Role>


<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreRol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraseña)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreRol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contraseña)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRol">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdRol">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRol">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

