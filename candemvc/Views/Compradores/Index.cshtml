@model IEnumerable<CandelariaP.Models.Compradore>


<h2>Compradores</h2>



<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreComprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidoComprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teléfono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreComprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoComprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teléfono)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdComprador">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdComprador">Details</a> |
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.IdComprador">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

